mixin catCard(img, title)
	
	a(href="#!").cat-card
		.card-img
			img(src="./img/category/cat"+ img +".webp", srcset="./img/category/cat"+ img +"@2x.webp 2x"  alt="img")
		.card-txt
			p !{title}
