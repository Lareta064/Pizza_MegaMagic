extends ../layouts/layout.pug

block content
	
	//HEADER
	header.header
		.container
			.header-content
				a(href="order-page.html").btn-back
				.h2-up Заказ № 1001
				
	//MAIN
	main.main.bg-grey
		.container.gap-20
			//STEPS
			.order-steps
				.step-item-wrapper.step-done
					.step-item
						.step-icon
							svg.svg-assig
								use(href='./img/sprite.svg#svg-assig')
